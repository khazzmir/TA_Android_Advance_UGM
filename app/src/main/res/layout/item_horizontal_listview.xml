<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="95dp"
        android:layout_height="125dp"
        android:layout_margin="5dp"
        android:background="@drawable/listview_item_hor"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/circle_ice_cream">

            <ImageView
                android:id="@+id/icecream_list"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="5dp"
                android:src="@drawable/cookies" />

        </LinearLayout>

        <TextView
            android:id="@+id/icecream_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Cookies and Cream"
            android:textAlignment="center"
            android:textColor="#153f65"/>

    </LinearLayout>

</LinearLayout>